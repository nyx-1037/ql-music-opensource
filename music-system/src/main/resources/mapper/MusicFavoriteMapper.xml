<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nyx.musicPlatform.mapper.MusicFavoriteMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.nyx.musicPlatform.entity.MusicFavorite">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="music_id" property="musicId" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        id, user_id, music_id, create_time
    </sql>

    <!-- 根据用户ID获取收藏的音乐ID列表 -->
    <select id="getFavoriteMusicIdsByUserId" resultType="java.lang.Long">
        SELECT music_id
        FROM ql_music_favorite
        WHERE user_id = #{userId} AND music_id IS NOT NULL AND playlist_id IS NULL
        ORDER BY create_time DESC
    </select>

    <!-- 检查收藏是否存在 -->
    <select id="existsByUserIdAndMusicId" resultType="java.lang.Boolean">
        SELECT COUNT(1) > 0
        FROM ql_music_favorite
        WHERE user_id = #{userId} AND music_id = #{musicId}
    </select>

    <!-- 添加收藏 -->
    <insert id="insert" parameterType="com.nyx.musicPlatform.entity.MusicFavorite">
        INSERT INTO ql_music_favorite (user_id, music_id, create_time)
        VALUES (#{userId}, #{musicId}, #{createTime})
    </insert>

    <!-- 删除收藏 -->
    <delete id="deleteByUserIdAndMusicId">
        DELETE FROM ql_music_favorite
        WHERE user_id = #{userId} AND music_id = #{musicId}
    </delete>

    <!-- 根据用户ID删除所有收藏 -->
    <delete id="deleteByUserId">
        DELETE FROM ql_music_favorite
        WHERE user_id = #{userId}
    </delete>

    <!-- 根据音乐ID删除所有收藏 -->
    <delete id="deleteByMusicId">
        DELETE FROM ql_music_favorite
        WHERE music_id = #{musicId}
    </delete>

    <!-- 获取用户收藏数量 -->
    <select id="countByUserId" resultType="java.lang.Long">
        SELECT COUNT(1)
        FROM ql_music_favorite
        WHERE user_id = #{userId}
    </select>

    <!-- 获取音乐被收藏数量 -->
    <select id="countByMusicId" resultType="java.lang.Long">
        SELECT COUNT(1)
        FROM ql_music_favorite
        WHERE music_id = #{musicId}
    </select>

</mapper>