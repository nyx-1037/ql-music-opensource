<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.musicmanager.system.mapper.QlMusicFavoriteMapper">
    
    <resultMap type="QlMusicFavorite" id="QlMusicFavoriteResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="musicId"    column="music_id"    />
        <result property="playlistId"    column="playlist_id"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectQlMusicFavoriteVo">
        select id, user_id, music_id, playlist_id, create_time from ql_music_favorite
    </sql>

    <select id="selectQlMusicFavoriteList" parameterType="QlMusicFavorite" resultMap="QlMusicFavoriteResult">
        <include refid="selectQlMusicFavoriteVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="musicId != null "> and music_id = #{musicId}</if>
            <if test="playlistId != null "> and playlist_id = #{playlistId}</if>
        </where>
    </select>
    
    <select id="selectQlMusicFavoriteById" parameterType="Long" resultMap="QlMusicFavoriteResult">
        <include refid="selectQlMusicFavoriteVo"/>
        where id = #{id}
    </select>

    <insert id="insertQlMusicFavorite" parameterType="QlMusicFavorite" useGeneratedKeys="true" keyProperty="id">
        insert into ql_music_favorite
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="musicId != null">music_id,</if>
            <if test="playlistId != null">playlist_id,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="musicId != null">#{musicId},</if>
            <if test="playlistId != null">#{playlistId},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateQlMusicFavorite" parameterType="QlMusicFavorite">
        update ql_music_favorite
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="musicId != null">music_id = #{musicId},</if>
            <if test="playlistId != null">playlist_id = #{playlistId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteQlMusicFavoriteById" parameterType="Long">
        delete from ql_music_favorite where id = #{id}
    </delete>

    <delete id="deleteQlMusicFavoriteByIds" parameterType="String">
        delete from ql_music_favorite where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>