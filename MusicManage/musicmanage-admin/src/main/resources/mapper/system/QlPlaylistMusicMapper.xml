<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.musicmanager.system.mapper.QlPlaylistMusicMapper">
    
    <resultMap type="QlPlaylistMusic" id="QlPlaylistMusicResult">
        <result property="id"    column="id"    />
        <result property="playlistId"    column="playlist_id"    />
        <result property="musicId"    column="music_id"    />
        <result property="sortOrder"    column="sort_order"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectQlPlaylistMusicVo">
        select id, playlist_id, music_id, sort_order, create_time from ql_playlist_music
    </sql>

    <select id="selectQlPlaylistMusicList" parameterType="QlPlaylistMusic" resultMap="QlPlaylistMusicResult">
        <include refid="selectQlPlaylistMusicVo"/>
        <where>  
            <if test="playlistId != null "> and playlist_id = #{playlistId}</if>
            <if test="musicId != null "> and music_id = #{musicId}</if>
            <if test="sortOrder != null "> and sort_order = #{sortOrder}</if>
        </where>
    </select>
    
    <select id="selectQlPlaylistMusicById" parameterType="Long" resultMap="QlPlaylistMusicResult">
        <include refid="selectQlPlaylistMusicVo"/>
        where id = #{id}
    </select>

    <insert id="insertQlPlaylistMusic" parameterType="QlPlaylistMusic" useGeneratedKeys="true" keyProperty="id">
        insert into ql_playlist_music
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="playlistId != null">playlist_id,</if>
            <if test="musicId != null">music_id,</if>
            <if test="sortOrder != null">sort_order,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="playlistId != null">#{playlistId},</if>
            <if test="musicId != null">#{musicId},</if>
            <if test="sortOrder != null">#{sortOrder},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateQlPlaylistMusic" parameterType="QlPlaylistMusic">
        update ql_playlist_music
        <trim prefix="SET" suffixOverrides=",">
            <if test="playlistId != null">playlist_id = #{playlistId},</if>
            <if test="musicId != null">music_id = #{musicId},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteQlPlaylistMusicById" parameterType="Long">
        delete from ql_playlist_music where id = #{id}
    </delete>

    <delete id="deleteQlPlaylistMusicByIds" parameterType="String">
        delete from ql_playlist_music where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>