<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.musicmanager.system.mapper.QlPlaylistMapper">
    
    <resultMap type="QlPlaylist" id="QlPlaylistResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="description"    column="description"    />
        <result property="coverUrl"    column="cover_url"    />
        <result property="userId"    column="user_id"    />
        <result property="isPublic"    column="is_public"    />
        <result property="playCount"    column="play_count"    />
        <result property="musicCount"    column="music_count"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="isDeleted"    column="is_deleted"    />
    </resultMap>

    <sql id="selectQlPlaylistVo">
        select id, name, description, cover_url, user_id, is_public, play_count, music_count, status, create_time, update_time, is_deleted from ql_playlist
    </sql>

    <select id="selectQlPlaylistList" parameterType="QlPlaylist" resultMap="QlPlaylistResult">
        <include refid="selectQlPlaylistVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="coverUrl != null  and coverUrl != ''"> and cover_url = #{coverUrl}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="isPublic != null "> and is_public = #{isPublic}</if>
            <if test="playCount != null "> and play_count = #{playCount}</if>
            <if test="musicCount != null "> and music_count = #{musicCount}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="isDeleted != null "> and is_deleted = #{isDeleted}</if>
        </where>
    </select>
    
    <select id="selectQlPlaylistById" parameterType="Long" resultMap="QlPlaylistResult">
        <include refid="selectQlPlaylistVo"/>
        where id = #{id}
    </select>

    <insert id="insertQlPlaylist" parameterType="QlPlaylist" useGeneratedKeys="true" keyProperty="id">
        insert into ql_playlist
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="description != null">description,</if>
            <if test="coverUrl != null">cover_url,</if>
            <if test="userId != null">user_id,</if>
            <if test="isPublic != null">is_public,</if>
            <if test="playCount != null">play_count,</if>
            <if test="musicCount != null">music_count,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="isDeleted != null">is_deleted,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="description != null">#{description},</if>
            <if test="coverUrl != null">#{coverUrl},</if>
            <if test="userId != null">#{userId},</if>
            <if test="isPublic != null">#{isPublic},</if>
            <if test="playCount != null">#{playCount},</if>
            <if test="musicCount != null">#{musicCount},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="isDeleted != null">#{isDeleted},</if>
         </trim>
    </insert>

    <update id="updateQlPlaylist" parameterType="QlPlaylist">
        update ql_playlist
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
            <if test="coverUrl != null">cover_url = #{coverUrl},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="isPublic != null">is_public = #{isPublic},</if>
            <if test="playCount != null">play_count = #{playCount},</if>
            <if test="musicCount != null">music_count = #{musicCount},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="isDeleted != null">is_deleted = #{isDeleted},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteQlPlaylistById" parameterType="Long">
        delete from ql_playlist where id = #{id}
    </delete>

    <delete id="deleteQlPlaylistByIds" parameterType="String">
        delete from ql_playlist where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>