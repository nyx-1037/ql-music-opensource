<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.musicmanager.system.mapper.QlBannerMapper">
    
    <resultMap type="QlBanner" id="QlBannerResult">
        <result property="id"          column="id"          />
        <result property="title"       column="title"       />
        <result property="description" column="description" />
        <result property="imageUrl"    column="image_url"   />
        <result property="buttonText"  column="button_text" />
        <result property="actionType"  column="action_type" />
        <result property="actionUrl"   column="action_url"  />
        <result property="sortOrder"   column="sort_order"  />
        <result property="status"      column="status"      />
        <result property="createBy"    column="create_by"   />
        <result property="createTime"  column="create_time" />
        <result property="updateBy"    column="update_by"   />
        <result property="updateTime"  column="update_time" />
        <result property="remark"      column="remark"      />
    </resultMap>

    <sql id="selectQlBannerVo">
        select id, title, description, image_url, button_text, action_type, action_url, sort_order, status, create_by, create_time, update_by, update_time, remark from ql_banner
    </sql>

    <select id="selectQlBannerList" parameterType="QlBanner" resultMap="QlBannerResult">
        <include refid="selectQlBannerVo"/>
        <where>  
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="description != null  and description != ''"> and description like concat('%', #{description}, '%')</if>
            <if test="imageUrl != null  and imageUrl != ''"> and image_url = #{imageUrl}</if>
            <if test="buttonText != null  and buttonText != ''"> and button_text like concat('%', #{buttonText}, '%')</if>
            <if test="actionType != null  and actionType != ''"> and action_type = #{actionType}</if>
            <if test="actionUrl != null  and actionUrl != ''"> and action_url = #{actionUrl}</if>
            <if test="sortOrder != null "> and sort_order = #{sortOrder}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
        order by sort_order asc, create_time desc
    </select>
    
    <select id="selectQlBannerById" parameterType="Long" resultMap="QlBannerResult">
        <include refid="selectQlBannerVo"/>
        where id = #{id}
    </select>
    
    <select id="selectActiveBannerList" resultMap="QlBannerResult">
        <include refid="selectQlBannerVo"/>
        where status = '0'
        order by sort_order asc, create_time desc
    </select>
        
    <insert id="insertQlBanner" parameterType="QlBanner" useGeneratedKeys="true" keyProperty="id">
        insert into ql_banner
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="description != null">description,</if>
            <if test="imageUrl != null and imageUrl != ''">image_url,</if>
            <if test="buttonText != null">button_text,</if>
            <if test="actionType != null and actionType != ''">action_type,</if>
            <if test="actionUrl != null">action_url,</if>
            <if test="sortOrder != null">sort_order,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null and updateBy != ''">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="description != null">#{description},</if>
            <if test="imageUrl != null and imageUrl != ''">#{imageUrl},</if>
            <if test="buttonText != null">#{buttonText},</if>
            <if test="actionType != null and actionType != ''">#{actionType},</if>
            <if test="actionUrl != null">#{actionUrl},</if>
            <if test="sortOrder != null">#{sortOrder},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null and updateBy != ''">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateQlBanner" parameterType="QlBanner">
        update ql_banner
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="description != null">description = #{description},</if>
            <if test="imageUrl != null and imageUrl != ''">image_url = #{imageUrl},</if>
            <if test="buttonText != null">button_text = #{buttonText},</if>
            <if test="actionType != null and actionType != ''">action_type = #{actionType},</if>
            <if test="actionUrl != null">action_url = #{actionUrl},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteQlBannerById" parameterType="Long">
        delete from ql_banner where id = #{id}
    </delete>

    <delete id="deleteQlBannerByIds" parameterType="String">
        delete from ql_banner where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>