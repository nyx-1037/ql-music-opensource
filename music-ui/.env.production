# 生产环境配置
NODE_ENV=production

# 应用配置
VUE_APP_TITLE=七洛音乐
VUE_APP_DESCRIPTION=一个现代化的音乐分享平台
VUE_APP_VERSION=1.1.0

# API配置 - 生产环境使用完整的API地址
VUE_APP_API_BASE_URL=/api
VUE_APP_API_TIMEOUT=30000
# 生产环境不需要代理配置，直接访问API服务器
#VUE_APP_BACKEND_URL=http://localhost:8081

# 上传配置
VUE_APP_UPLOAD_MAX_SIZE=50
VUE_APP_UPLOAD_ALLOWED_TYPES=mp3,wav,flac,aac,ogg,m4a
VUE_APP_UPLOAD_CHUNK_SIZE=2048

# 图片配置
VUE_APP_IMAGE_MAX_SIZE=5
VUE_APP_IMAGE_ALLOWED_TYPES=jpg,jpeg,png,gif,webp
VUE_APP_IMAGE_QUALITY=0.8

# 分页配置
VUE_APP_PAGE_SIZE=20
VUE_APP_MAX_PAGE_SIZE=100

# 缓存配置
VUE_APP_CACHE_EXPIRE=3600000
VUE_APP_TOKEN_EXPIRE=7200000
VUE_APP_REFRESH_TOKEN_EXPIRE=2592000000

# 第三方服务配置（生产环境）
VUE_APP_GITHUB_CLIENT_ID=prod_github_client_id
VUE_APP_GOOGLE_CLIENT_ID=prod_google_client_id
VUE_APP_QQ_APP_ID=prod_qq_app_id
VUE_APP_WECHAT_APP_ID=prod_wechat_app_id

# 生产配置
VUE_APP_DEV_TOOLS=false
VUE_APP_MOCK_API=false
VUE_APP_SOURCE_MAP=false
VUE_APP_DROP_CONSOLE=true
VUE_APP_DROP_DEBUGGER=true

# 调试配置
VUE_APP_DEBUG_MODE=false
VUE_APP_LOG_LEVEL=error
VUE_APP_SHOW_PERFORMANCE=false

# CDN配置
VUE_APP_CDN_URL=https://cdn.musicplatform.com
VUE_APP_STATIC_URL=https://static.musicplatform.com

# 监控配置
VUE_APP_SENTRY_DSN=your_sentry_dsn
VUE_APP_ANALYTICS_ID=your_analytics_id