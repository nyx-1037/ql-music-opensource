# 环境配置
NODE_ENV=development

# 应用配置
VUE_APP_TITLE=七洛音乐 - 开发环境
VUE_APP_DESCRIPTION=一个现代化的音乐分享平台（开发环境）
VUE_APP_VERSION=1.0.0-dev

# 基础路径配置
BASE_URL=/

# API配置 - 开发环境使用相对路径，通过代理转发
VUE_APP_API_BASE_URL=/api
VUE_APP_API_TIMEOUT=15000
# 后端服务地址（用于代理配置）
VUE_APP_BACKEND_URL=http://localhost:8081
# 开发服务器端口
VUE_APP_DEV_PORT=8080

# 上传配置
VUE_APP_UPLOAD_MAX_SIZE=50
VUE_APP_UPLOAD_ALLOWED_TYPES=mp3,wav,flac,aac,ogg,m4a
VUE_APP_UPLOAD_CHUNK_SIZE=1024

# 图片配置
VUE_APP_IMAGE_MAX_SIZE=5
VUE_APP_IMAGE_ALLOWED_TYPES=jpg,jpeg,png,gif,webp
VUE_APP_IMAGE_QUALITY=0.8

# 分页配置
VUE_APP_PAGE_SIZE=20
VUE_APP_MAX_PAGE_SIZE=100

# 缓存配置
VUE_APP_CACHE_EXPIRE=3600000
VUE_APP_TOKEN_EXPIRE=7200000
VUE_APP_REFRESH_TOKEN_EXPIRE=2592000000

# 第三方服务配置（开发环境）
VUE_APP_GITHUB_CLIENT_ID=dev_github_client_id
VUE_APP_GOOGLE_CLIENT_ID=dev_google_client_id
VUE_APP_QQ_APP_ID=dev_qq_app_id
VUE_APP_WECHAT_APP_ID=dev_wechat_app_id

# 开发配置
VUE_APP_DEV_TOOLS=true
VUE_APP_MOCK_API=false
VUE_APP_SOURCE_MAP=true
VUE_APP_DROP_CONSOLE=false
VUE_APP_DROP_DEBUGGER=false

# 调试配置
VUE_APP_DEBUG_MODE=true
VUE_APP_LOG_LEVEL=debug
VUE_APP_SHOW_PERFORMANCE=true

# 热更新配置
VUE_APP_HMR_PORT=3001
VUE_APP_HMR_HOST=localhost